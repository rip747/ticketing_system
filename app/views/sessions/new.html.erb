<div class="login-box mx-auto" style="max-width: 400px; margin-top: 60px;">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="#" class="h1"><b>Ticketing</b>System</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Sign in to start your session</p>
      <%= form_with url: session_path, local: true do |f| %>
        <div class="input-group mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          <div class="input-group-append">
            <div class="input-group-text"><span class="fas fa-envelope"></span></div>
          </div>
        </div>
        <div class="input-group mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          <div class="input-group-append">
            <div class="input-group-text"><span class="fas fa-lock"></span></div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.submit "Login", class: "btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger mt-2"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
</div>
